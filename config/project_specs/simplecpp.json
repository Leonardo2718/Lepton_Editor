{
    "project_type": "Simple C++ Project",
    "working_directory": {
        "template_directories": [
            {   "name": "src",
                "type": "source_dir",
                "file_types": [
                    {"type": "header_file", "local_directory_only": false},
                    {"type": "source_file", "local_directory_only": false},
                    {"type": "c_source_file", "local_directory_only": false}
                ],
                "unknown_file_types": {
                    "are_visible": true,
                    "context_menu": {
                        "use_default": true,
                        "actions": {}
                    },
                    "local_directory_only": false
                },
                "unknown_directories": {
                    "are_visible": true,
                    "context_menu": {
                        "use_default": true,
                        "actions": {}
                    },
                    "local_directory_only": false
                }
            }
        ],
        "template_files": [
            {"name": "Makefile", "type": "makefile"},
            {"name": "README.md", "type": "readme_doc"}
        ],
        "unknown_file_types": {
            "are_visible": true,
            "ignore_hidden": true,
            "context_menu": {
                "use_default": true,
                "actions": {}
            },
            "local_directory_only": false
        },
        "unknown_directories": {
            "are_visible": true,
            "ignore_hidden": true,
            "ignore": [".git", "bin", "lib"],
            "context_menu": {
                "use_default": true,
                "actions": {}
            },
            "local_directory_only": false
        }
    },
    "file_types": {
        "header_file": {
            "name_filter": ".+\\.(h|hpp|hxx)",
            "context_menu": {
                "use_default": true,
                "actions": {}
            }
        },
        "source_file": {
            "name_filter": ".+\\.(cpp|cxx|cc)",
            "context_menu": {
                "use_default": true,
                "actions": {}
            }
        },
        "c_source_file": {
            "name_filter": ".+\\.c",
            "context_menu": {
                "use_default": true,
                "actions": {}
            }
        }, 
        "makefile": {
            "context_menu": {
                "use_default": true,
                "actions": {}
            }
        },
        "readme_doc": {
            "context_menu": {
                "use_default": true,
                "actions": {}
            }
        }
    },
    "directory_types": {
        "source_dir": {
            "context_menu": {
                "use_default": true
            }
        }
    },
    "default_file_context_menu": {
        "Open": "%OPEN_FILE",
        "Rename": "%RENAME_FILE",
        "Remove": "%DELETE_FILE"
    },
    "default_dir_context_menu": {
        "Add file": "%ADD_FILE",
        "Add directory": "%ADD_DIRECTORY",
        "Refresh": "%REFRESH",
        "Rename": "%RENAME_DIR",
        "Remove": "%REMOVE_DIR"
    },
    "project_context_menu": {
        "Add file": "%ADD_FILE",
        "Add directory": "%ADD_DIRECTORY",
        "Refresh": "%REFRESH",
        "Rename": "%RENAME_PROJECT",
        "Close": "%CLOSE_PROJECT"
    }
}