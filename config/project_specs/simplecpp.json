{
    "project_type": "Simple C++ Project",
    "working_directory": {
        "template_directory": {
            "name": "src",
            "file_type": {
                "type": "header_file",
                "local_directory_only": false
            },
            "file_type": {
                "type": "source_file",
                "local_directory_only": false
            },
            "file_type": {
                "type": "c_source_file",
                "local_directory_only": false
            },
            "unknown_file_types": {
                "are_visible": true,
                "local_directory_only": false
            },
            "unknown_directories": {
                "are_visible": true,
                "local_directory_only": false
            }
        },
        "template_file": {
            "name": "Makefile",
            "type": "makefile"
        },
        "template_file": {
            "name": "README.md",
            "type": "readme_doc"
        },
        "unknown_file_types": {
            "are_visible": true,
            "ignore_hidden": true,
            "local_directory_only": false
        },
        "unknown_directories": {
            "are_visible": true,
            "ignore_hidden": true,
            "ignore": [".git", "bin", "lib"],
            "local_directory_only": false
        }
    },
    "file_types": {
        "header_file": {
            "name_filter": ".+\\.(h|hpp|hxx)"
        },
        "source_file": {
            "name_filter": ".+\\.(cpp|cxx|cc)"
        },
        "c_source_file": {
            "name_filter": ".+\\.c"
        }
    }
}